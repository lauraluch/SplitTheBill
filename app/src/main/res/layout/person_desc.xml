<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".view.PersonDetailsActivity"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="18dp"
            android:text="Detalhes da pessoa"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textColor="@color/black"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="18dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome:"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/nameEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g Maria"
                android:textStyle="normal"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valor total pago:"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/totalPriceEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g 94,99"
                android:textStyle="normal"
                android:textSize="18sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Itens comprados:"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/thingsBoughtEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="e.g Tequila, Amendoim"
                android:textStyle="normal"
                android:textSize="18sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_gravity="center"
                android:gravity="center"

                >

<!--                <Button-->
<!--                    android:id="@+id/addItemBt"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_marginEnd="12dp"-->
<!--                    android:text="Adicionar item..."-->
<!--                    android:layout_gravity="center"-->
<!--                    />-->

                <Button
                    android:id="@+id/saveBt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Salvar pessoa"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>